<ul>
	<% if @tracks %>
		<% @tracks.each do |t| %>
			<li>
				<%= link_to 'Add Song', "add_song/#{t[2]}", :class => 'songButton add', :remote => true%>
				<%= link_to 'Play Song', "play_song/#{t[2]}", :class => 'songButton playNow', :remote => true%>
				<div class="details">
					<ul>
						<li><%= truncate("#{t[0]}", :length =>  32) %></li>
						<li><%= truncate("#{t[1]}", :length =>  32) %></li>
						<li>
							<div class="album"> 
								<%= truncate("#{t[3]}", :length =>  32) %>
							</div>
							<div class="playAlbum">
								<%= link_to "Play Whole Album", "play_album", :remote => true %>
							</div>
						</li>
					</ul>
				</div>
			</li>
	
		<% end %>
	<% end %>
</ul>
		